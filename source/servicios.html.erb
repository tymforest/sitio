---
layout: services
---
<%# Config %>
<% service_page = "" %>
<% data.site.service_page.each do |id, service| %>
  <% service_page = service %>
<% end %>
<%# End %>
<div id="servicios-portada" class="portada" title="<%= service_page.hero.description %>">
  <h1 class="blanco">Servicios</h1>
</div>
<%# Servicios para Maderas %>
<section class="inicio centrado inicial">
  <div class="contenedor-movil-completo contenedor-tablet contenedor-desktop">
    <header class="margen-servicios">
      <h1><%= service_page.wood_section_title %></h1>
    </header>
    <div class="reticula listado">
      <%# Config %>
      <% subcategories = [] %>
      <% data.site.service_subcategory.each do |id, subcategory| %>
        <% subcategories.push(subcategory) %>
      <% end %>
      <%# End %>
      <% subcategories.each do |subcategory| %>
        <% if subcategory.category === "Maderas" %>
          <div class="lista-de-anuncios columna-tablet-6 columna-desktop-6">
            <div id="<%= subcategory.nombre.parameterize %>-maderas" title="<%=  %>" class="servicio-anuncio">
              <div class="contenido borde-inferior">
                <div class="subcontenido">
                  <h4 class="blanco"><%= subcategory.nombre %></h4>
                  <p class="blanco"><%= subcategory.description %></p>
                </div>
              </div>
              <div class="contenido">
                <h3 class="blanco">Servicios</h3>
                <% data.site.services.each do |id, service| %>
                  <% if service.subcategory && service.subcategory.category === subcategory.category %>
                    <div class="subcontenido">
                      <p class="blanco"><%= service.nombre %></p>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
<%# Servicios para Tableros %>
