          <source srcset="<%= consulting.image.url %>?w=400&h=400&fit=fill" media="(min-width: 600px)" />
          <img src="<%= consulting.image.url %>" alt="<%= consulting.image.description %>"/>
        </picture>
      </div>
      <div class="columna-desktop-1"></div>
      <div class="columna-tablet-50 columna-desktop-4">
        <div class="contenedor-movil contenedor-tablet">
          <div class="detalle-anuncio">
            <header>
              <h1><%= consulting.title %></h1>
              <div class="contenido">
                <div class="subcontenido">
                  <p><%= consulting.description %></p>
                </div>
              </div>
            </header>
