---
layout: list
---
<%# Config %>
<% category = locals[:category] %>
<% subcategory = locals[:subcategory] %>
<% if !subcategory %>
  <% title = category.name %>
<% else %>
  <% title = subcategory.nombre %>
<% end %>
<% primary_products = [] %>
<% data.site.product_menu.each do |id, list| %>
  <% if category.name === "Maderas" %>
    <% list.maderas.each do |product| %>
      <% primary_products.push(product) %>
    <% end %>
  <% elsif category.name === "Tableros" %>
    <% list.tableros.each do |product| %>
      <% primary_products.push(product) %>
    <% end %>
  <% end %>
<% end %>
<%# End %>
<section id="contenedor-de-contenido" class="lista <% if subcategory %>lista-tablet-subcategoria<% end %>">
  <header>
    <h1><%= title %></h1>
  </header>
  <div class="contenedor-movil-completo contenedor-tablet-completo">
    <div class="reticula listado">
      <% data.product_menu.each do |id, menu| %>
        <%# Config %>
        <% if !subcategory %>
          <% if title === "Maderas" %>
            <% list = menu.maderas %>
          <% elsif title === "Tableros" %>
            <% list = menu.tableros %>
          <% end %>
        <% end %>
        <%# End %>
        <% list.each do |product| %>
          <%# Config %>
          <% if !product.subcategory %>
            <% name = product.name %>
            <% path = "/#{ title.parameterize }/#{ name.parameterize }" %>
            <% src = "#{ product.card.url }" %>
            <% alt = "#{ product.card.description }" %>
          <% else %>
            <% name = subcategory.nombre %>
            <% path = "/#{ title.parameterize }/#{ name.parameterize }" %>
            <% src = "#{ subcategory.card.url }" %>
            <% alt = "#{ subcategory.card.description }" %>
          <% end %>
          <%# End %>
          <div class="list-de-productos columna-movil-50 columna-tablet-33 columna-desktop-3">
            <div class="tarjeta-producto">
              <% link_to "/#{ path }", :class => "enlace-imagen" do %>
                <div class="cubierta"></div>
                <picture>
                  <img src="<%= src %>" alt="<%= alt %>"/>
                </picture>
              <% end %>
              <header>
                <%= link_to name, "#{ path }" %>
                <% if !product.subcategory %>
                  <% if product.is_sale %>
                    <span class="oferta-lista"></span>
                  <% end %>
                <% else %>
                  <% if subcategory_on_sale name %>
                    <span class="oferta-lista"></span>
                  <% end %>
                <% end %>
              </header>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
